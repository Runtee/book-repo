                                <input type="text" class="form-control bg-light text-bg-light p-2" name="email" id="email" value="<%= user.email %> ">
                            </div>

                            <div class="mb-3">
                                <label for="publisher" class="form-label"><strong>full name</strong> </label>
                                <input type="text" class="form-control bg-light text-bg-light p-2" name="name" id="publisher" value="<%= user.name %> ">
                            </div>

                    
                        <div class="text-center">
                            <button class="btn btn-warning btn-lg">Update</button>
                        </div>
                    
                </div>
            </form>
            </div>
        </div>
    </main>


