<%- include ('includes/head'); -%>

    <body class="">

        <%- include ('includes/header'); -%>


    <main>
        <% if(errors !=null && errors.length> 0){ %>

            <% for (var i=0; i < errors.length; i++) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= errors[i] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
            <% } %>
        
        
            <% if(success !=null && success.length> 0){ %>
        
            <% for (var i=0; i < success.length; i++) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= success[i] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
            <% } %>
        

        <div class="container mt-3 py-5 py-md-5 text-white z-index-20">
            <div class="row">
              <div class="col-xl-10">
                <div class="text-center text-lg-start">
                  <p class="letter-spacing-4 mb-2 text-warning text-shadow fw-bold fs-5">All the best books</p>
                  <h1 class="display-3 fw-bold text-shadow">Get Any Research Paper and Textbook</h1>
                </div>
                <div class="col-lg-12 d-grid align-items-center form-group m-auto bg-light p-2 px-4 rounded-5">
                    <form action="/search" method="get">
                        <div class="row">
                            <div class="col-lg-6 d-flex align-items-center form-group">
                                <input class="form-control border-0 shadow-0" type="text" name="text"
                                    placeholder="What are you searching for?">
                            </div>
                            <div class="col-lg-4 d-flex align-items-center form-group me-auto">
                                <div class="input-label-absolute input-label-absolute-right w-100">
                                    <input class="form-control border-0 shadow-0" type="text" name="type" placeholder="type">
                                </div>
                            </div>
    
                            <div class="col-lg-2 d-grid">
                                <button class="btn btn-warning rounded-pill h-100" type="submit">Search </button>
                            </div>
                        </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
    </main>

    <%- include ('includes/footer'); -%> 

</body>

</html>