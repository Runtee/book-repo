<%- include ('includes/head'); -%>

<body class="upload">

  <%- include ('includes/header'); -%>

  <% if(errors !=null && errors.length> 0){ %>

  <% for (var i=0; i < errors.length; i++) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= errors[i] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
  <% } %>


  <% if(success !=null && success.length> 0){ %>

  <% for (var i=0; i < success.length; i++) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success[i] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
  <% } %>
  <main class="p-5 m-1 mx-5">
    <div class="bg-dark text-white p-4 opacity-75">
      <div class="p-5">
        <div class="text-center text-uppercase mb-2">
          Edit file
        </div>
        <form method="post" action="/edit-book/<%= book.id %>">
          <div class="row text-uppercase">

            <div class="col-md-6">
              <div class="mb-3">
                <label for="title" class="form-label">title</label>
                <input type="text" class="form-control bg-dark text-bg-dark" name="title" id="title" required value="<%= book.title %>">
              </div>
              <div class="mb-3">
                <label for="language" class="form-label">language</label>
                <input type="text" class="form-control bg-dark text-bg-dark" name="language" id="language" required value="<%= book.text_language %>">
              </div>
              <div class=" mb-3">
                <label for="type" class="form-label">type</label>
                <select class="form-select bg-dark text-bg-dark" name="type" required id="type">
                  <option selected ><%= book.type %></option>
                  <option>Scholarly Books (Monographs)</option>
                  <option>Textbooks</option>
                  <option>Anthologies</option>
                  <option>Dissertations</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="about" class="form-label"> about </label>
                <textarea class="form-control bg-dark text-bg-dark" name="about" id="about"><%= book.about %></textarea>
              </div>

              <div class="mb-3">
                <label for="publisher" class="form-label">publisher</label>
                <input type="text" class="form-control bg-dark text-bg-dark" name="publisher" id="publisher"value="<%= book.publisher %>">
              </div>

            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="author" class="form-label">author</label>
                <input type="text" class="form-control bg-dark text-bg-dark" name="author" id="author" value="<%= book.author %>">
              </div>
              <div class="mb-3">
                <label for="year" class="form-label">year</label>
                <input type="text" class="form-control bg-dark text-bg-dark" name="year" id="year" value="<%= book.year %>">
              </div>
              <div class="mb-3">
                <label for="pages" class="form-label">pages</label>
                <input type="text" class="form-control bg-dark text-bg-dark" name="pages" id="pages" value="<%= book.pages %>">
              </div>
              <div class="mb-3">
                <label for="categories" class="form-label">categories</label>
                <input type="text" class="form-control bg-dark text-bg-dark" name="categories" id="categories" value="<%= book.categories %>">
              </div>
              <img src="/database/bookImage1668715021570IMG_20221116_180933.png">
            </div>
            <div class="text-center">
              <button class="btn btn-warning btn-lg">Submit</button>
            </div>

          </div>
        </form>
      </div>
    </div>
  </main>


  <%- include ('includes/footer'); -%>

</body>

</html>